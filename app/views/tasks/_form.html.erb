<% form_for([@project, @task]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, t('labels.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :message, t('labels.message') %><br />
    <%= f.text_area :message %>
  </p>
  <p>
  	<%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit btn_submit %> <%= link_to t('link.cancel'), (@task.new_record? ? project_path(@project) : project_task_path(@project, @task)) %>
  </p>
<% end %>
