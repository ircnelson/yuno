<h2>Lista de usuários</h2>
<ul type="square">
	<% if @users.count > 0 %>
    <% @users.each do |u| %>
      <li><%= u.name %> (<%= link_to 'Editar', edit_user_path(u) %> | <%= (!u.suspended?) ? link_to('Desativar', suspend_user_path(u)) : link_to('Ativar', unsuspend_user_path(u)) %>)</li>
    <% end %>
  <% else %>
    <li>Nenhum usuário cadastrado</li>
  <% end %>
</ul>
