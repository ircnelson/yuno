!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    = javascript_include_tag :defaults
    = stylesheet_link_tag 'default'
    = yield :header
  %body
    #page
      #header
        %h1
          %a{ :href => "/" }
            YUNO
        %p#login
          = logged_in? ? "#{link_to(current_user.login, profile_path)} (#{link_to(t('link.logout'), logout_path)})" : (check_url("users", controller.controller_name)) ? link_to(t('link.home'), "/") : link_to(t('link.join'), join_path)
      #content
        #menubar
          %ul#menu
            - if logged_in?
              %li
                = link_to(t('link.home'), '/', :class => 'index')
            - if is_admin?
              %li
                = link_to(t('link.projects'), projects_path, :class => 'projects')
              %li
                = link_to(t('link.clients'), clients_path, :class => 'clients')
              %li
                = link_to(t('link.users'), users_path, :class => 'users')
          = yield :menubar
        #sidebar
          = yield :sidebar
        #main
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash-#{name}"
          = yield
      #footer
        %small
          yuno 2009
